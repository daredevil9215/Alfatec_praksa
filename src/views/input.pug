extends layout

block content
  -data = data || {}

  if suvenir
    form(action="/alter_2" method="POST" class="form-registration")
        input(
            type='hidden'
            id='_id'
            name='_id' 
            value=suvenir._id
        )

        label(for="name") Name:
        input(
        type="text"
        id="name"
        name="name"
        class="form-control"
        value=suvenir.name
        )

        span 
          if errors
            p= errors.name

        label(for="barCode") Bar Code:
        input(
        type="text"
        id="barCode"
        name="barCode"
        class="form-control"
        value=suvenir.barCode
        )

        span 
          if errors
            p= errors.barCode

        label(for="color") Color:
        input(
        type="text"
        id="color"
        name="color"
        class="form-control"
        value=suvenir.color
        )

        span 
          if errors
            p= errors.color

        label(for="quantity") Quantity:
        input(
        type="number"
        id="quantity"
        name="quantity"
        class="form-control"
        value=suvenir.quantity
        )

        span 
          if errors
            p= errors.quantity

        label(for="productImageUrl") Product Image Url:
        input(
        type="text"
        id="productImageUrl"
        name="productImageUrl"
        class="form-control"
        value=suvenir.productImageUrl
        )

        span 
          if errors
            p= errors.productImageUrl

        label(for="price") Price:
        input(
        type="number"
        step="0.01"
        id="price"
        name="price"
        class="form-control"
        value=suvenir.price
        )

        span 
          if errors
            p= errors.price

        label(for="description") Description:
        input(
        type="text"
        id="description"
        name="description"
        class="form-control"
        value=suvenir.description
        )

        span 
          if errors
            p= errors.description

        input(
        type="submit"
        value="Modify"
        class="btn btn-lg btn-primary btn-block"
        )
